{
  "extends": "@backstage/cli/config/tsconfig.json",
  "include": [
    "packages/*/src",
    "plugins/*/src",
    "plugins/*/dev",
    "plugins/*/migrations"
  ],
  "compilerOptions": {
    "outDir": "dist-types",
    "rootDir": ".",
    "paths": {
      "@backstage/plugin-*/alpha": ["./plugins/*"],
      "@backstage/plugin-*/beta": ["./plugins/*"]
    },
    "useUnknownInCatchVariables": false
  }
}
